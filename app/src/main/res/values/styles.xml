<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ActionBarStyle" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="android:background">@color/primaryColor</item>
    </style>

    <style name="UsernameFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:inputType">text</item>
    </style>

    <style name="LoginTextStyle" >
        <item name="android:fontFamily">@font/notosans</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_marginStart">@dimen/dimen_16</item>
        <item name="android:layout_marginTop">@dimen/dimen_4</item>
        <item name="android:layout_marginEnd">@dimen/dimen_16</item>
        <item name="android:layout_marginBottom">@dimen/dimen_16</item>
    </style>

    <style name="KakaoLoginTextStyle" parent="LoginTextStyle">
        <item name="android:backgroundTint">@color/kakao_login </item>
    </style>

    <style name="GoogleLoginTextStyle" parent="LoginTextStyle">
        <item name="android:backgroundTint">@color/google_login </item>
    </style>

    <style name="LoginMainTextStyle" parent="LoginTextStyle">
        <item name="android:textSize">38sp</item>
    </style>

    <style name="MainStyle">
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_marginStart">@dimen/dimen_4</item>
        <item name="android:layout_marginTop">@dimen/dimen_4</item>
        <item name="android:layout_marginEnd">@dimen/dimen_4</item>
        <item name="android:layout_marginBottom">@dimen/dimen_4</item>
    </style>

    <style name="RecordTitleStyle" parent="MainStyle" >
        <item name="android:fontFamily">@font/notosans</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/notosans_bold</item>
    </style>



</resources>
