<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RecordWOD" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorAccent">@color/primaryLightColor</item>

        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorOnSecondary">@color/onSecondary</item>

        <item name="colorError">@color/error</item>

        <item name="android:windowBackground">@color/background</item>

        <item name="colorOnBackground">@color/onBackground</item>

        <item name="actionBarTheme">@style/ActionBarStyle</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/background</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">@bool/lightNavEnabled</item>
        <item name="android:navigationBarColor" tools:targetApi="o">@color/background</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">@bool/lightNavEnabled
        </item>
    </style>

    <!-- The splash theme to set the background with your splash screen drawable -->
    <style name="AppTheme.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/lifting_icon</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/ic_launcher_background</item>
        <item name="android:navigationBarColor" tools:targetApi="o">@color/ic_launcher_background
        </item>
    </style>

</resources>
